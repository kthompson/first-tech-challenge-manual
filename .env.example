# Environment Variables for FTC Decode Next.js App

# Anthropic Claude Configuration (for chat completions)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=1.0

# Local Embedding Model (auto-downloads on first use)
EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2

# RAG Configuration
RAG_TOP_K=5                    # Number of chunks to retrieve
RAG_MIN_SCORE=0.3              # Minimum similarity score (0-1)
RAG_MAX_CONTEXT_TOKENS=3000    # Max tokens for context

# Vector Store Path (relative to project root)
VECTOR_STORE_PATH=./data/vector_store.json
